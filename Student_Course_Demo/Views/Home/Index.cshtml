@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>this is a student courser demo</h1>
    <p class="lead">in this demo you will be able to view edit add and assign students to courses.</p>
</div>

<div class="row" ng-app="mainApp">

    <div class="row" ng-controller="MainController">


        <br><br><hr><br><br>


        <div class="row">
            <div class="col-md-12" style="text-align:center;">
                <br />
                <h2>Courses</h2>
                <br /><br />
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <table style="width: 100%;
                       margin: auto;
                       text-align: center;">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Id</th>
                            <th style="text-align: center;">Name</th>
                            <th style="text-align: center;">Level</th>
                            <th style="text-align: center;">Code</th>
                            <th style="text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="course in courses">
                            <td>{{course.Id}}</td>
                            <td>{{course.Name}}</td>
                            <td>{{course.Level}}</td>
                            <td>{{course.Code}}</td>
                            <td>
                                <div class="btn btn-success" ng-click="delete('Cours',course.Id)">
                                    <span class="fa fa-ban">
                                    </span>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <form style="text-align: center;margin:auto;" ng-submit="submit('Cours')">

                    <!--<input type="text" ng-model="Id" name="Id"/>-->
                    <input required placeholder="Name" type="text" ng-model="CName" name="Name" maxlength="20"/>
                    <select required ng-model="Level">
                        <option value="Hard">
                            Hard
                        </option>
                        <option value="Medium">
                            Medium
                        </option>
                        <option value="Easy">
                            Easy
                        </option>
                    </select>
                    <input maxlength="10" required placeholder="Code" type="text" ng-model="Code" name="Code" />

                    <input type="submit" value="Submit" class="btn btn-success" id="submit" value="Add course" />
                   
                        <div style="width: 25%;margin: auto;" class="g-recaptcha" data-sitekey="6LdOHiYTAAAAANHI1yZrqsGsniH-o1kTWxWkJmrn"></div>
                    
                </form>
                <p style="color: red; text-align: center;">{{errorPostCourse}}</p>
            </div>




        </div>


        <br><br><hr><br><br>



        <div class="row">

            <div class="col-md-12" style="text-align:center;">
                <br />
                <h2>Students</h2>
                <br /><br />
            </div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <table style="width: 90%;
    margin: auto;
    text-align: center;">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Id</th>
                            <th style="text-align: center;">Name</th>
                            <th style="text-align: center;">Gender</th>
                            <th style="text-align: center;">Age</th>
                            <th style="text-align: center;">Year</th>
                            <th style="text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="student in students">
                            <td>{{student.Id}}</td>
                            <td>{{student.Name}}</td>
                            <td>{{student.Gender}}</td>
                            <td>{{student.Age}}</td>
                            <td>{{student.Year}}</td>
                            <td>
                                <div class="btn btn-success" ng-click="delete('Students',student.Id)">
                                    <span class="fa fa-ban">
                                    </span>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>

                <form style="text-align: center;margin:auto;" class="row" ng-submit="submit('Students')">
                    <!--<input type="text" ng-model="Id" name="Id"/>-->
                    <input maxlength="20" required placeholder="Name" type="text" ng-model="SName" name="Name" />

                    <select required ng-model="Gender">
                        <option value="Male">
                            Male
                        </option>
                        <option value="Female">
                            Female
                        </option>
                    </select>
                    <input required min="18" max="24" placeholder="Age" type="number" ng-model="Age" name="Age" />

                    <select required ng-model="Year">
                        <option value="1">
                            Year 1
                        </option>
                        <option value="2">
                            Year 2
                        </option>
                        <option value="3">
                            Year 3
                        </option>
                        <option value="4">
                            Year 4
                        </option>
                        <option value="5">
                            Year 5
                        </option>

                    </select>
                    <input type="submit" class="btn btn-success" id="submit" value="Add student" />

                </form>
                <p style="color: red; text-align: center;">{{errorPostStudent}}</p>

            </div>




        </div>




        <br><br><hr><br><br>
        <div class="row">


            <div class="col-md-6" style="text-align:center;">
                <br />
                <h3>Show/Edit courses</h3><br />
                <p>enter the id of the course you want to view or edit</p><br />
            </div>



