                        </tr>

                    </tbody>
                </table>

                <form style="text-align: center;" class="row" ng-submit="submit('Students')">
                    <!--<input type="text" ng-model="Id" name="Id"/>-->
                    <input required placeholder="Name" type="text" ng-model="SName" name="Name" />
                    <input required placeholder="Gender" type="text" ng-model="SGender" name="Gender" />
                    <input required placeholder="Age" type="text" ng-model="SAge" name="Age" />
                    <input required placeholder="Year" type="text" ng-model="SYear" name="Year" />
                    <input type="submit" class="btn btn-success" id="submit" value="Add student" />

                </form>


            </div>

            <div class="col-md-6" style="text-align: center;">
                <form style="text-align: center;" class="row" ng-submit="submit('VStudents')">
                    <!--<input type="text" ng-model="Id" name="Id"/>-->
                    <input required placeholder="Id" type="text" ng-model="SId" name="Id" />
                    <input type="submit" class="btn btn-success" id="submit" value="View or Edit student" />

                </form>
                <br /><hr />
                <div class="row" >
                    <div class="row">
                        <form style="text-align: center;" class="row" ng-submit="submit('SStudents')">
