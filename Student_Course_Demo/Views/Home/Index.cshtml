@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>this is a student courser demo</h1>
    <p class="lead">in this demop you will be able to view edit add and assign students to courses.</p>
</div>

<div class="row" ng-app="mainApp">

    <div class="row" ng-controller="MainController">

        <div class="row">
            <br />
        <h2>Courses</h2>
           <hr/><br/>
        <div class="col-md-6">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Level</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="course in courses">
                        <td>{{course.Id}}</td>
                        <td>{{course.Name}}</td>
                        <td>{{course.Level}}</td>
                        <td>
                            <div class="btn btn-success" ng-click="delete('Cours',course.Id)">
                                <span class="fa fa-ban">
                                </span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><!--<input type="text" ng-model="Id" name="Id"/>--></td>
                        <td><input type="text" ng-model="Name" name="Name" /></td>
                        <td><input type="text" ng-model="Level" name="Level" /></td>
                        <td>
                            <input type="submit" class="btn btn-success" id="submitCourse" value="Add course" />


                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
        <div class="row">
            <br />
            <h2>Students</h2>
            <hr /><br />
        <div class="col-md-6">
            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Gender</th>
                        <th>Age</th>
                        <th>Year</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="student in students">
                        <td>{{student.Id}}</td>
                        <td>{{student.Name}}</td>
                        <td>{{student.Gender}}</td>
                        <td>{{student.Age}}</td>
                        <td>{{student.Year}}</td>
                        <td>
                            <div class="btn btn-success" ng-click="delete('Students',student.Id)">
                                <span class="fa fa-ban">
                                </span>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td><!--<input type="text" ng-model="Id" name="Id"/>--></td>
                        <td><input type="text" ng-model="Name" name="Name" /></td>
                        <td><input type="text" ng-model="Gender" name="Gender" /></td>
                        <td><input type="text" ng-model="Age" name="Age" /></td>
                        <td><input type="text" ng-model="Year" name="Year" /></td>
                        <td>
                            <input type="submit" class="btn btn-success" id="submitStudent" value="Add student" />


                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    </div>


</div>