@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>this is a student courser demo</h1>
    <p class="lead">in this demo you will be able to view edit add and assign students to courses.</p>
</div>

<div class="row" ng-app="mainApp">

    <div class="row" ng-controller="MainController">

        <div class="row">
            <div class="col-md-6" style="text-align:center;">
                <br />
                <h2>Courses</h2>
                <hr /><br />
            </div>
            <div class="col-md-6" style="text-align:center;">
                <br />
                <h3>Show/Edit</h3><hr />
                <p>enter the id of the course you want to view or edit</p><br />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <table style="width: 100%;
                       margin: auto;
                       text-align: center;">
                    <thead>
                        <tr>
                            <th style="text-align: center;">Id</th>
                            <th style="text-align: center;">Name</th>
                            <th style="text-align: center;">Level</th>
                            <th style="text-align: center;">Code</th>
                            <th style="text-align: center;">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="course in courses">
                            <td>{{course.Id}}</td>
                            <td>{{course.Name}}</td>
                            <td>{{course.Level}}</td>
                            <td>{{course.Code}}</td>
                            <td>
                                <div class="btn btn-success" ng-click="delete('Cours',course.Id)">
                                    <span class="fa fa-ban">
                                    </span>
                                </div>
                            </td>
                        </tr>

                    </tbody>
                </table>
                <form style="text-align: center;" ng-submit="submit('Cours')">

                    <!--<input type="text" ng-model="Id" name="Id"/>-->
                    <input required placeholder="Name" type="text" ng-model="CName" name="Name" />
                    <select required ng-model="Level">
                        <option value="Hard">
                            Hard
                        </option>
                        <option value="Medium">
                            Medium
                        </option>
                        <option value="Easy">
                            Easy
                        </option>
                    </select>
                    <input required placeholder="Code" type="text" ng-model="Code" name="Code" />

                    <input type="submit" class="btn btn-success" id="submit" value="Add course" />

                </form>
                <p style="color: red; text-align: center;">{{errorPostCourse}}</p>
            </div>
            <div class="col-md-6" style="text-align: center;">




               <!-- <input type="text" ng-autocomplete ng-model="courses" options="options" details="details" />
                   -->


                


                <form style="text-align: center;" class="row" ng-submit="submit('VCours')">

                    <!--<input type="text" ng-model="Id" name="Id"/>-->
                   
                    <autocomplete ng-model="coursetoEdit" data="coursesNames" ng-mouseenter="loadsugc()"></autocomplete>

                    
                     <input type="submit" class="btn btn-success" id="submit" value="View or Edit Course" />

                </form>
                <br /><hr />
                <div class="row" >
                    <div class="row">
                    <form style="text-align: center;" class="row" ng-submit="submit('SCours')">

                        <!-- ng-if="showC" <input type="text" ng-model="Id" name="Id"/>-->
                        <input required placeholder="Name" type="text" ng-model="SCName" name="Name" />
                        <input required placeholder="Level" type="text" ng-model="SLevel" name="Level" />
                        <input required placeholder="Code" type="text" ng-model="SCode" name="Code" />
                        <input type="submit" class="btn btn-success" id="submit" value="Update course" />
                    </form>
                        </div>
                    <div class="row">
                        <h5 style="text-align:center;">Students taking this course</h5>
                        <table style="width: 100%;
                       margin: auto;
                       text-align: center;">
                            <thead>
                                <tr>
                                    <th style="text-align: center;">Id</th>
                                    <th style="text-align: center;">Name</th>
                                    <th style="text-align: center;">Gender</th>
                                    <th style="text-align: center;">Age</th>
                                    <th style="text-align: center;">Year</th>
                                    <th style="text-align: center;">Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="Sstudent in Sstudents">
                                    <td>{{Sstudent.Id}}</td>
                                    <td>{{Sstudent.Name}}</td>
                                    <td>{{Sstudent.Gender}}</td>
                                    <td>{{Sstudent.Age}}</td>
                                    <td>{{Sstudent.Year}}</td>
                                    <td>
                                        <div class="btn btn-success" ng-click="delete('StudentofCours',Sstudent.Id)">
                                            <span class="fa fa-ban">
                                            </span>
                                        </div>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                        <form style="text-align: center;" class="row" ng-submit="submit('studenttoCours')">

                            <!--<input type="text" ng-model="Id" name="Id"/>-->
                            <input required placeholder="id" type="text" ng-model="studenttoCours" name="Name"  >
                             
